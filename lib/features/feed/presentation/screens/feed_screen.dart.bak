                                const SizedBox(width: 12),
                                const Text('Les miens'),
                                if (_selectedFilter == 'miens') ...
                                  const Spacer(),
                                  const Icon(Icons.check, color: Color(0xFF1a73e8), size: 20),
                                ],
                              ],
